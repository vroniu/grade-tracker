@model grade_tracker.Models.Grade

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this grade?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Assigned grade
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AssignedGrade)
        </dd>
        <dt class = "col-sm-2">
            Additional comment
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AdditionalComment)
        </dd>
        <dt class = "col-sm-2">
            Subject
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Subject.Name)
        </dd>
        <dt class = "col-sm-2">
            Student
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Student.FullName)
        </dd>
        <dt class = "col-sm-2">
            Graded by
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Teacher.FullName)
        </dd>
    </dl>
    
    <form asp-action="Delete" class="button-container">
        <div>
            <input type="hidden" asp-for="GradeId"/>
            <input type="submit" value="Delete" class="btn btn-danger"/>
        </div>
        <a asp-action="Index">
            <button type="button" class="btn btn-secondary">Cancel</button>
        </a>
    </form>
</div>

@model grade_tracker.Models.Grade

@{
    ViewData["Title"] = "Create";
}

<h1>Add a new grade</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AssignedGrade" class="control-label">Assign grade</label>
                <input asp-for="AssignedGrade" class="form-control" max="5" min="1"/>
                <span asp-validation-for="AssignedGrade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdditionalComment" class="control-label">Additional comment</label>
                <input asp-for="AdditionalComment" class="form-control" />
                <span asp-validation-for="AdditionalComment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubjectId" class="control-label"></label>
                <select asp-for="SubjectId" class ="form-control" asp-items="ViewBag.SubjectId">Select subject</select>
            </div>
            <div class="form-group">
                <label asp-for="StudentId" class="control-label"></label>
                <select asp-for="StudentId" class ="form-control" asp-items="ViewBag.StudentId">Select student</select>
            </div>
            <div class="form-group">
                <label asp-for="TeacherId" class="control-label"></label>
                <select asp-for="TeacherId" class ="form-control" asp-items="ViewBag.TeacherId">Select teacher</select>
            </div>
            <div class="button-container">
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
                <a asp-action="Index">
                    <button type="button" class="btn btn-secondary">Go back</button>
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model IEnumerable<grade_tracker.Models.Teacher>

@{
    ViewData["Title"] = "Index";
}

<h1>List of teachers</h1>

<p>
    <a asp-action="Create">
        <button type="button" class="btn btn-primary">
            <i class="bi bi-person-plus-fill"></i>
            Register new teacher
        </button>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Fist name
            </th>
            <th>
                Last name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td class="entity-buttons">
                <a asp-action="Edit" asp-route-id="@item.TeacherId">
                    <button type="button" class="btn btn-primary">
                        <i class="bi bi-pencil-fill"></i>
                        Edit
                    </button>
                </a>
                <a asp-action="Details" asp-route-id="@item.TeacherId">
                    <button type="button" class="btn btn-primary">
                        <i class="bi bi-list-stars"></i>
                        View details
                    </button>
                </a>
                <a asp-action="Delete" asp-route-id="@item.TeacherId">
                    <button type="button" class="btn btn-danger">
                        <i class="bi bi-trash3-fill"></i>
                        Delete
                    </button>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>

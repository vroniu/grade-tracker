<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - grade_tracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/grade_tracker.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/styles.css" >
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-app-indicator"></i>
                Grade Tracker
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item" style="flex-grow: 1">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Student" asp-action="Index">
                            <button type="button" class="btn btn-light" style="width: 100%">
                                <i class="bi bi-people"></i>
                                Students
                            </button>
                        </a>
                    </li>
                    <li class="nav-item" style="flex-grow: 1">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Teacher" asp-action="Index">
                            <button type="button" class="btn btn-light" style="width: 100%">
                                <i class="bi bi-person-check"></i>
                                Teachers
                            </button>
                        </a>
                    </li>
                    <li class="nav-item" style="flex-grow: 1">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Subject" asp-action="Index">
                            <button type="button" class="btn btn-light" style="width: 100%">
                                <i class="bi bi-card-checklist"></i>
                                Subjects
                            </button>
                        </a>
                    </li>
                    <li class="nav-item" style="flex-grow: 1">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Grade" asp-action="Index">
                            <button type="button" class="btn btn-light" style="width: 100%">
                                <i class="bi bi-123"></i>
                                Grades
                            </button>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>